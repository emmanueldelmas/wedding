<% content_for :script do %>
<script type="text/javascript">
	$(document).ready(function(){
		new jPlayerPlaylist({
			jPlayer: "#jquery_jplayer_1",
			cssSelectorAncestor: "#jp_container_1"
		}, [
			{
				<%= Song.all.collect{|song| %Q{title:\"#{song.title}\", mp3:\"#{audio_path(song.name+".mp3")}\", oga:\"#{audio_path(song.name+".ogg")}\	"} }.join("\n\t\t}, {\n\t\t\t").html_safe %>
			}
		], {
			swfPath: "../js",
			supplied: "oga, mp3",
			wmode: "window",
			smoothPlayBar: true,
			keyEnabled: true
		});
	});
	$(document).ready(function(){
		$("#jquery_jplayer_1").bind($.jPlayer.event.play, function(){
			$name = $("#jp_audio_0").attr('src').split(/\//).pop().split(/\./).shift();
			$("div.words").hide();
			$("div.words#"+$name).show();
		});
	});
</script>
<% end %>

