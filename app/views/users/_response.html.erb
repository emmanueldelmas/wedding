<h1 class="text-center">Yes we come !</h1>
<br />

<div class="row main_grey">
<%= form_for @current_user, role: "form" do |f| %>
	<div class="you col-xs-12 col-sm-6 col-md-6 col-lg-6">
		<h3>Vous</h3>
		<div class="user_name">
			<div class="form-group" id="firstname"><%= f.label "Prénom", for: "user_firstname" %><br /><%= f.text_field :firstname, placeholder: "Emmanuel", class: "form-control", required: "required" %></div>
			<div class="form-group" id="lastname"><%= f.label "Nom", for: "user_lastname" %><br /><%= f.text_field :lastname, placeholder: "Delmas", class: "form-control", required: "required" %></div>
			<div class="form-group" id="email">
				<%= f.label "Courriel", for: "user_email" %><br />
				<div class="input-group">
          <span class="input-group-addon">@</span><%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
		</div>
		<h3>Je viendrai...</h3>
		<div class="user_response row">
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
				<div class="row" id="wedding">
						<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= f.check_box :wedding, class: "pull-left" %></div>
						<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= f.label "à la cérémonie", class: "pull-left" %></div>
				</div>
				<div class="row" id="cocktail">
						<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= f.check_box :cocktail, class: "pull-left" %></div>
						<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= f.label " au cocktail (sur invitation)", class: "pull-left" %></div>
				</div>
			</div>
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 pull-left">
				<div class="row" id="dinner">
						<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= f.check_box :dinner, class: "pull-left" %></div>
						<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= f.label " au dîner (sur invitation)", class: "pull-left" %></div>
				</div>
				<div class="row" id="party">
						<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= f.check_box :party, class: "pull-left" %></div>
						<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= f.label "à la soirée (sur invitation)", class: "pull-left" %></div>
				</div>
			</div>
		</div>
	</div>
	<div class="partner col-xs-12 col-sm-6 col-md-6 col-lg-6">
	<h3>Votre conjoint</h3>
	<%= f.fields_for :partner do |p| %>
		<div class="user_name">
			<div class="form-group" id="firstname"><%= p.label "Prénom" %><br /><%= p.text_field :firstname, placeholder: "Marie-Liesse", value: @current_user.partner.firstname, class: "form-control" %></div>
			<div class="form-group" id="lastname"><%= p.label "Nom_de_famille" %><br /><%= p.text_field :lastname, placeholder: "Clement", value: @current_user.partner.lastname, class: "form-control" %></div>
			<div class="form-group" id="email">
				<%= p.label "Courriel" %><br />
				<div class="input-group">
					<span class="input-group-addon">@</span><%= p.email_field :email, value: @current_user.partner.email, class: "form-control" %>
				</div>
			</div>
		</div>
		<h3>Je viendrai...</h3>
		<div class="user_response row">
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
				<div class="row" id="wedding">
					<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= p.check_box :wedding, value: @current_user.partner.wedding, class: "pull-left" %></div>
					<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= p.label "à la cérémonie", class: "pull-left" %></div>
				</div>
				<div class="row" id="cocktail">
					<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= p.check_box :cocktail, value: @current_user.partner.cocktail, class: "pull-left" %></div>
					<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= p.label " au cocktail (sur invitation)", class: "pull-left" %></div>
				</div>
			</div>
			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
				<div class="row" id="dinner">
					<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= p.check_box :dinner, value: @current_user.partner.dinner, class: "pull-left" %></div>
					<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= p.label " au dîner (sur invitation)", class: "pull-left" %></div>
				</div>
				<div class="row" id="party">
					<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><%= p.check_box :party, value: @current_user.partner.party, class: "pull-left" %></div>
					<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10"><%= p.label "à la soirée (sur invitation)", class: "pull-left" %></div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<div class="user_message col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<br />
		<h3>Un petit mot ?</h3>
		<div class="" id="message_response"><%= f.text_area :message_response, placeholder: "Trop pressé d'être le jour J. On va s'éclater. Je vous kiff trop !", class: "form-control", required: "required", rows: "3" %></div>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<br />
		<div class="submit_form" id="submit_address"><%= f.submit "Soumettre", class: "btn btn-primary" %></div>
	</div>
<% end %>
</div>